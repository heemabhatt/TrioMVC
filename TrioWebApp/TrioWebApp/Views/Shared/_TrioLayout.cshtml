<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Trio Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
   

</head>
<body>
    
  
    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-2">logo</div>

            <div class="col-sm-10 jumbotron"><h3>TRIO TRONIC COMPUTERS AND CLASSES</h3></div>
        </div>
        <div class="row content">
            <div class="col-sm-2 sidenav">

                <ul class="nav nav-pills nav-stacked">
                    <li class="@(ViewBag.Current == "TrioIndex" ? "active" : "") "><a href="@Url.Action("TrioIndex", "TrioHome")" target="_self">Home</a></li>
                    <li class="@(ViewBag.Current == "TrioAboutUs" ? "active" : "") "><a href="@Url.Action("TrioAboutUs", "TrioHome")" target="_self">About Us</a></li>  
                    <li class="@(ViewBag.Current == "TrioProduct" ? "active" : "") "><a href="@Url.Action("showProduct", "TrioProduct")" target="_self">Products</a></li>  
                    <li class="@(ViewBag.Current == "TrioContactUs" ? "active" : "") "><a href="@Url.Action("TrioContactUs", "TrioHome")" target="_self">Contact Us</a></li>  

                
                 


                </ul><br>

            </div>

            <div class="col-sm-10">
                @RenderBody()
            </div>
        </div>


       
    </div>
    
        <footer  class="container-fluid">
            <p>&copy; @DateTime.Now.Year  - TRIO web application</p>
        </footer>
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
