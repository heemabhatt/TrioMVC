@model TrioWebApp.Models.TrioHomeModel

@{
    ViewBag.Title = "Trio Contact Us";
    Layout = "~/Views/Shared/_TrioLayout.cshtml";
}



<div class="container">
    <h2>Contact Us</h2>
    <form class="form-horizontal" role="form" data-toggle="validator" method="post" action="/TrioHome/submitContactUs">

        <div class="form-group">
            <label class="control-label col-sm-2" for="Full Name">Full Name:</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" name="fullName" id="txtFullName" placeholder="Enter Full Name" required >
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-3">
                <input type="email" class="form-control" name="email" id="txtEmail" placeholder="Enter Email" required  >
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Phone">Phone:</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" name="phone" id="txtPhone" placeholder="Enter Phone Number" required >
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2" for="comment">Comment:</label>
            <div class="col-sm-3">
                <textarea class="form-control" rows="5" name="comment" id="txtCommment" required ></textarea>
            </div>
        </div>



        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" >Submit</button>
            </div>
        </div>
    </form>
</div>



